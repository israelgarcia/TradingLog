<% provide(:title, 'Edit financial instrument') %>
<h1>Edit financial instrument</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@instrument) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save edited financial instrument", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', instruments_path %>
